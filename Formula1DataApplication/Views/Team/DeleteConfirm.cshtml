@model Formula1DataApplication.Models.TeamDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this Team?</h2>
<a href="/Team/List">Cancel</a>
<h3>Name: @Model.TeamName</h3>
<p>Country: @Model.TeamCountry</p>
<p>Year: @Model.TeamYear</p>

<form action="/Team/Delete/@Model.TeamID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>
